                <a class="primary-btn" href="/Admin/NewsManage/Delete/${datas[i].fNewsId}" onclick="return confirm('確定要刪除嗎?')">刪除</a>
            </td>
        </tr>`
        $(`#ListZone`).append(tr);*@
}
